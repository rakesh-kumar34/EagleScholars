<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Eagle Scholar's University</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>

    

    <script>
        $(document).ready(function(){
            $("#btn-login").click(function(){
                $("#admin-fg").val("N");
            });
            $("#admin-login").click(function(){
                $("#admin-fg").val("Y");
            });

            $("#loginform").validator();
            
        });
    </script>
</head>

<body>
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Please Sign In</div>
                </div>

                <div style="padding-top:30px" class="panel-body">
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger col-sm-12">
                            <%= message %>
                        </div>
                        <% } %>

                            <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="username" required>
                                </div>
                                
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <input id="login-password" type="password" class="form-control" name="password" placeholder="password" required>
                                </div>
                                <div class="checkbox">
                                        <label><input type="checkbox"> Remember me</label>
                                      </div>
                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
                                    <div class="col-md-12 controls">
                                        <button id="btn-login" type="submit" class="btn btn-primary btn-block">Student Login </button>
                                    </div>
                                    <hr>
                                    <div class="col-md-12 control">
                                        <button id="admin-login" type="submit" class="btn btn-primary btn-block">Admin Login </button>
                                    </div>
                                    <input type="hidden" name="adminFlag" id="admin-fg" value="">
                                </div>
                            </form>

                </div>
            </div>
        </div>

    </div>
</body>

</html>